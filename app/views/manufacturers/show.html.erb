<% if flash.any? %>
  <div class="flash">
    <div class="container">
      <li>
        <%=flash[:notice]%>
      </li>
    </div>
  </div>
<% end %>

<h1>
  <%=@manufacturer.name%>
</h1>
<h3>
  <%=@manufacturer.country_name%>
</h3>
  <%=link_to "Add cars to the manufactuer", new_manufacturer_car_path(manufacturer_id: params[:id])%>
<body>
    <%if @cars%>
      <%@cars.each do |a|%>
      <div>&nbsp;</div>
      <li><%="Color: "%><%=a.color%></li>
      <li><%="Year: "%><%=a.year%></li>
      <li><%="Mileage: "%><%=a.mileage%></li>
        <%if a.description%>
          <li><%="Description: "%><%=a.description%></li>
        <%end%>
      <%end%>
    <%end%>

  <div>&nbsp;</div>
    <%=link_to "Go Back", '/'%>
</body>
